<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#543219"
    tools:context="com.example.muska.robomania.Workshops$PlaceholderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:src="@drawable/workshop"
                android:id="@+id/imageembedd"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="#c0c0c0"/>
            <TextView
                android:id="@+id/section_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:text="Robotics Club organises embedded system classes for students. Embedded system, is a computer system with a delicate function, it is embedded as a part of complete device often including hardware and mechanical parts. Modern embedded system are often based on microcontroller. Embedded System range from portable devices such as MP3 player to hybrid vehicle."/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
