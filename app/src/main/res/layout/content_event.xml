<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_event"
    android:layout_width="match_parent"
    android:background="#543219"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.muska.robomania.Event"
    tools:showIn="@layout/activity_event">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/but1"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:weightSum="2"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/robowar"
            android:textColor="#ffb400"
            android:id="@+id/Button1"
            android:text="Robowar">

        </Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/laserstrike"
            android:textColor="#ffb400"
            android:id="@+id/Button2"
            android:text="Laserstrike">

        </Button>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/but2"
        android:layout_below="@+id/but1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:weightSum="2"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/bomb"
            android:textColor="#ffb400"
            android:id="@+id/Button3"
            android:text="Bomb Diffusion"
            >

        </Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/chess"
            android:textColor="#ffb400"
            android:id="@+id/Button4"
            android:text="Electronic Chess">

        </Button>
    </LinearLayout>

           <LinearLayout
               android:id="@+id/but3"
               android:layout_below="@+id/but2"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:padding="10dp"

               android:weightSum="2"
               android:orientation="horizontal">
               <Button
                   android:layout_width="0dp"
                   android:layout_height="150dp"
                   android:layout_weight="1"
                   android:layout_marginRight="10dp"
                   android:background="@drawable/sherlocked"

                   android:id="@+id/Button5">

               </Button>

               <Button
                   android:layout_width="0dp"
                   android:layout_height="150dp"
                   android:layout_weight="1"
                   android:layout_marginLeft="10dp"
                   android:background="@drawable/tekken"
                   android:id="@+id/Button6"
                   >

               </Button>
           </LinearLayout>

            <LinearLayout
                android:id="@+id/but4"
                android:layout_below="@+id/but3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"

                android:weightSum="2"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circuitwiz"
                    android:id="@+id/Button7"
                    >

                </Button>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/eartnew"
                    android:textColor="#ffb400"
                    android:id="@+id/Button8"
                    android:text="Electronic Arts">

                </Button>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/but5"
                android:layout_below="@+id/but2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"

                android:weightSum="2"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/turing"
                    android:id="@+id/Button9"
                    >

                </Button>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/reflex"
                    android:id="@+id/Button10"
                    >

                </Button>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/but6"
                android:layout_below="@+id/but2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"

                android:weightSum="2"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/nfs"
                    android:id="@+id/Button11"
                    >

                </Button>

            </LinearLayout>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>
