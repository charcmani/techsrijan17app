<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_developer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#543219"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.muska.robomania.Developer"
    tools:showIn="@layout/activity_developer">

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
       android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_gravity="center"
        >

        <ImageButton
            android:layout_width="265dp"
            android:layout_height="240dp"
            android:id="@+id/devImage"
            android:src="@drawable/myimage2"
            android:clickable="true"
            android:scaleType="fitXY"
            android:padding="0dp"
            android:layout_alignParentTop="true"

            />
    </LinearLayout>
    <ScrollView
        android:layout_below="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay1"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:text="Muskaan Agrawal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="32dp"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:text="Computer Science and Engineering"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:text="muskaan.mmmut@gmail.com"/>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
